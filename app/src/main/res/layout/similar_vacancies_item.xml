<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="?attr/colorOnSecondary"
    android:layout_height="110dp">

    <ImageView
        android:id="@+id/vacancy_company_logo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@mipmap/ic_vacancy_company_logo"
        android:layout_margin="@dimen/margin_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/vacancy_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16"
        android:text="Разработчик бэкенда"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/font_size_22"
        app:layout_constraintStart_toEndOf="@id/vacancy_company_logo"
        app:layout_constraintTop_toTopOf="@id/vacancy_company_logo" />
    <TextView
        android:id="@+id/vacancy_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_medium"
        android:textSize="@dimen/font_size_22"
        android:text="Москва"
        app:layout_constraintStart_toStartOf="@id/vacancy_name"
        app:layout_constraintTop_toBottomOf="@id/vacancy_name" />
    <TextView
        android:id="@+id/vacancy_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/font_size_16"
        android:text="Календарь"
        app:layout_constraintStart_toStartOf="@id/vacancy_name"
        app:layout_constraintTop_toBottomOf="@id/vacancy_city" />
    <TextView
        android:id="@+id/vacancy_salary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="от 40 000 до 80 000"
        android:fontFamily="@font/ys_display_regular"
        android:textSize="@dimen/font_size_16"
        app:layout_constraintStart_toStartOf="@id/vacancy_name"
        app:layout_constraintTop_toBottomOf="@id/vacancy_department" />
</androidx.constraintlayout.widget.ConstraintLayout>
