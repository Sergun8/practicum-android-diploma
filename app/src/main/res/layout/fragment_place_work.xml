<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorOnSecondary"
    android:visibility="visible"
    tools:context=".ui.filtre.IndustrySelectionFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="?attr/colorOnSecondary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/arrow_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:src="@drawable/arrow_back_16x16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/toolbar"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_16"
            android:fontFamily="@font/ys_display_medium"
            android:text="@string/industry_selection_text"
            android:textColor="?attr/colorOnPrimary"
            android:textSize="@dimen/font_size_22"
            app:layout_constraintBottom_toBottomOf="@id/toolbar"
            app:layout_constraintStart_toEndOf="@id/arrow_back_button"
            app:layout_constraintTop_toTopOf="@id/toolbar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/country_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:cornerRadius="0dp"
        android:text="@string/country_text"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_size_16"
        android:backgroundTint="?attr/colorOnSecondary"
        android:drawableEnd="@drawable/ic_item_arrow"
        android:gravity="start|center_vertical"
        />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/industry_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@id/country_button"
        app:cornerRadius="0dp"
        android:text="@string/region_text"
        android:fontFamily="@font/ys_display_regular"
        android:textColor="@color/gray"
        android:textSize="@dimen/font_size_16"
        android:backgroundTint="?attr/colorOnSecondary"
        android:drawableEnd="@drawable/ic_item_arrow"
        android:gravity="start|center_vertical"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_margin="@dimen/margin_16"
        android:text="@string/choose_button_text"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_16"
        android:backgroundTint="@color/blue"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
